{% extends "CRGSBRBundle::layout.html.twig" %}
{% block title %}
    Accueil - {{ parent() }}
{% endblock %}
{% block body %}
    <h3 class="text-center">Vos rapport de visites</h3><br/>
    <table class="table table-bordered">
        <tr>
            <th width="25%">Date</th>
            <th width="25%">Praticien</th>
            <th width="25%">Ville</th>
            <th width="25%">Motif</th>
        </tr>
        {% for unRapport in lesRapports %}
            <tr>
                <td> {{ unRapport.getDateRapport|date('d/m/Y') }} </td>
                <td> {{ unRapport.getMedecin.getNomPrenomMedecin }}</td>
                <td> {{ unRapport.getMedecin.getVilleMedecin }}</td>
                <td> {{ unRapport.getMotif }}</td>                    
            </tr>
        {% endfor %}
    </table>
{% endblock %}