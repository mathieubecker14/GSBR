{% extends "CRGSBRBundle::layout.html.twig" %}
{% block title %}
    Accueil - {{ parent() }}
{% endblock %}
{% block body %}

    <h3 class="text-center">Nouveau rapport de visite</h3>
    <hr> 

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    {{ form_errors(form) }}

    <div class="form-group">
        {{ form_label(form.medecin, "Praticien", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
        <div class="col-md-6">
            {{ form_widget(form.medecin, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.medecin) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.dateRapport, "Date", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
        <div class="col-md-6">
            {{ form_widget(form.dateRapport, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.dateRapport) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.motif, "Motif", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
        <div class="col-md-6">
            {{ form_widget(form.motif, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.motif) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.bilan, "Bilan", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
        <div class="col-md-6">
            {{ form_widget(form.bilan, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.bilan) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-6 col-md-offset-3">
            {{ form_widget(form.Ajouter, {'attr': {'class': 'btn btn-primary'}}) }}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
